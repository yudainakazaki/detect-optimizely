{
  "manifest_version": 3,
  "name": "Detect Optimizely",
  "version": "1.0",
  "description": "A Chrome plugin to check the status of Optimizely A/B tests on the current website.",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "icons": {
    "32": "images/icon-gray.png",
    "128": "images/icon-gray.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/icon-gray.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["<all_urls>"]
    }
  ]
}